<Window x:Class="PointEditor.MessageBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointEditor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MessageBoxDialog" Height="150" Width="275">
    <Grid Background="#FF05001E">
        <VirtualizingStackPanel>
            <TextBlock x:Name="MessageBox" Text="Your input" TextWrapping="Wrap" Height="42" Margin="21,0,21,0" Foreground="White" VerticalAlignment="Top"/>
            <TextBox x:Name="ResponseTextBox" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="220" Background="Transparent" Foreground="White" CaretBrush="White" />
            <Button Content="OK" IsDefault="True" Click="OKButton_Click" HorizontalAlignment="Center" Width="220" Height="25" VerticalAlignment="Center" Foreground="White" Background="#00DDDDDD" />
        </VirtualizingStackPanel>
    </Grid>
</Window>
