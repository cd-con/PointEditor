<Window x:Class="PointEditor.MessageBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointEditor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MessageBoxDialog" Height="125" Width="275">
    <Grid>
        <VirtualizingStackPanel>
            <TextBlock x:Name="MessageBox" Text="Your input" TextWrapping="Wrap" Height="30" Margin="10,0,10,0"/>
            <TextBox x:Name="ResponseTextBox" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="255" />
            <Button Content="OK" IsDefault="True" Click="OKButton_Click" HorizontalAlignment="Center" Width="255" Height="25" VerticalAlignment="Center" />
        </VirtualizingStackPanel>
    </Grid>
</Window>
